<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="toolbarStyle">@style/CustomActionBar</item>-->
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="CustomActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">@dimen/navigation_item_padding_left</item>
        <item name="android:paddingRight">@dimen/navigation_item_padding_right</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/default_tint_selector</item>
        <item name="android:textSize">@dimen/navigation_item_text_size</item>
        <item name="android:background">@drawable/navigation_item_bg_selector</item>
    </style>

</resources>
